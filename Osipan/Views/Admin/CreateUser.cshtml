@model Osipan.Models.ProductCatalog
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Название товара</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена товарра</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">применить</button>
    </div>
</form>